{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ai-agent-orchestration.schema.json",
  "title": "AI Agent Mode Definition Schema",
  "description": "Schema for validating AI Agent Orchestration System mode definitions in YAML format",
  "type": "object",
  "required": ["customModes"],
  "properties": {
    "customModes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/agentMode"
      }
    }
  },
  "definitions": {
    "agentMode": {
      "type": "object",
      "required": ["slug", "name", "roleDefinition", "customInstructions", "groups", "source"],
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
          "description": "Unique identifier in kebab-case (e.g., 'uber-orchestrator')"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name with optional emoji prefix (e.g., 'üßê UBER Orchestrator')"
        },
        "roleDefinition": {
          "type": "string",
          "minLength": 10,
          "description": "Agent's core purpose and responsibilities"
        },
        "customInstructions": {
          "type": "string",
          "minLength": 20,
          "description": "Detailed operational directives and workflow instructions"
        },
        "groups": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": ["read", "edit", "mcp", "command"]
          },
          "description": "Permission/capability sets for the agent"
        },
        "source": {
          "type": "string",
          "enum": ["project", "system"],
          "description": "Origin indicator for the agent definition"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version (e.g., '1.0.0') - RECOMMENDED"
        },
        "description": {
          "type": "string",
          "description": "Optional extended description of agent capabilities"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Optional categorization tags"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
          },
          "description": "List of agent slugs this agent depends on"
        }
      },
      "additionalProperties": false
    }
  }
}